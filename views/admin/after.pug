extends ../adminLayout.pug

block content

  h3 Startzeit

  form#starttime(method='POST', action='after')
    .row
      input(type="text", size="2", name="hours", value=hours)
      span :
      input(type="text", size="2", name="minutes" value=minutes)
      span :
      input(type="text", size="2", name="seconds" value=seconds)
      input(type='hidden', name='_csrf', value=_csrf)

    button(id = 'set_race_starttime', type='submit').bigfont.button-primary Startzeit eintragen

  h3 Ergebnisse importieren
    form(method="POST", action="after/import?_csrf=#{csrf}", enctype="multipart/form-data")
      input(type="file", name="displayImage")
      button#upload-results.primary.button-primary.pace(type='submit') Ergebnisse importieren


